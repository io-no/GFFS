<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="599dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="src_in"
        android:drawableLeft="@drawable/baseline_nfc_white_24dp"
        android:elevation="@dimen/cardview_compat_inset_shadow"
        android:fontFamily="sans-serif-thin"
        android:onClick="Select"
        android:stateListAnimator="@android:anim/anticipate_overshoot_interpolator"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/selected"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="599dp"
        android:background="#318fb5"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="No Data Type Selected"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="24dp"
        android:background="#318FB5"
        android:fontFamily="sans-serif-thin"
        android:onClick="writenow"
        android:text="Write Now"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/text"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/selected"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-599dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Put your text here"
            android:textAlignment="center"
            />
    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>